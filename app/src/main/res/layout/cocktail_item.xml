<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/cocktailItemNameTextView"
            android:text="CocktailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CocktailColor"
            android:id="@+id/cocktailItemColorTextView"
            android:layout_below="@+id/lbNom"
            android:layout_toRightOf="@+id/cocktailColorLabel"
            android:layout_toEndOf="@+id/cocktailColorLabel"
            android:layout_alignBaseline="@+id/cocktailColorLabel"/>

    <ImageView
            android:id="@+id/favouriteItemImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>